<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <title></title>
  
  
  
  <link rel="stylesheet" href="css/jquery.mobile-1.3.1.min.css">
  
  <!-- Extra Codiqa features -->
  
  <!-- jQuery and jQuery Mobile -->
  <script src="js/jquery-1.9.1.min.js"></script>
  <script src="js/jquery.mobile-1.3.1.min.js"></script>
   <script src="js/loginCheak.js"></script>

  <!-- Extra Codiqa features -->
  <script>
  function login(){
	
	 var email=$("#userName").val();
	 var passWord=$("#passWord").val();
	 if (cheakUP(email,passWord)){
		 	
		 $.ajax({
				type: "POST",
				url: "/login",
				data:{
					email:email,
					password:passWord
					
				},
				success: function (data) {

					//window.localStorage.setItem("name",data.name);
					window.localStorage.setItem("email",email);
                    window.localStorage.setItem("username",data.username);
                    window.localStorage.setItem("signature",data.signature);
                    console.log('email: '+email);
                    console.log('username: '+data.username);
                    window.location.href="/";
					
					}


			});
	 }
	 else{
		 alert("输入的注册邮箱或密码格式错误");
	 }
  }
  
  
  </script>
   
</head>
<body>
<!-- Home -->
<div data-role="page" id="page1">
    <div data-theme="a" data-role="header">
   
        <h3>
            登陆
        </h3>
    </div>
    <div data-role="content">
        <div data-role="fieldcontain">
            <label for="userName">
                用户名
            </label>
            <input name="" id="userName" placeholder="" value="" type="text">
        </div>
        <div data-role="fieldcontain">
            <label for="passWord">
                密码
            </label>
            <input name="" id="passWord" placeholder="" value="" type="password">
        </div>
        <a data-role="button" data-theme="b" href="javascript:login()">
            登陆
        </a>
        <a data-role="button" href='javascript:window.location.href="register"'>
            注册新账号
        </a>

    </div>
    
   

</div>
</body>
</html>
